<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center|top">
        <TextView
            android:id="@+id/eventNameID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="TEST"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:gravity="center|top"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/eventNameSetupLLID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/colorBackround"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/editTextNameID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="60"
                    android:background="@drawable/main_screen_buttons"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Total Sum"
                    android:textColor="@color/colorBackround"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/editTextSumID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="60"
                    android:background="@drawable/main_screen_buttons"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewSumID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="60"
                    android:background="@drawable/main_screen_buttons"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Sum"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="30"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center|top"
                    android:paddingTop="2dp"
                    android:text="Description"
                    android:textColor="@color/colorBackround"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/editTextDescriptionID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="60"
                    android:background="@drawable/main_screen_buttons"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewDescriptionID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="60"
                    android:background="@drawable/main_screen_buttons"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/lvID"
                android:layout_width="350dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="35"
                android:background="@color/colorBackround"/>
            <Button
                android:id="@+id/updateBTNid"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alata_regular"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Update Event"
                android:background="@drawable/main_screen_buttons"
                android:layout_width="200dp"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/deleteBTNid"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_screen_buttons"
                android:fontFamily="@font/alata_regular"
                android:text="Delete Event"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>