<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_gravity="bottom"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="REGISTRATION"
            android:textSize="40dp"
            android:fontFamily="@font/alata_regular"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/colorBackround"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:weightSum="100"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="15"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:hint="Login"
                android:paddingLeft="15dp"
                android:id="@+id/loginID"
                android:background="@drawable/main_screen_buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"/>
            <EditText
                android:hint="Password"
                android:paddingLeft="15dp"
                android:id="@+id/passwordID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@drawable/main_screen_buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"/>
            <EditText
                android:hint="Confirm Password"
                android:paddingLeft="15dp"
                android:id="@+id/confirmPasswordID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@drawable/main_screen_buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"/>
            <EditText
                android:hint="Name"
                android:paddingLeft="15dp"
                android:id="@+id/nameID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@drawable/main_screen_buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"/>
            <EditText
                android:hint="Surname"
                android:paddingLeft="15dp"
                android:id="@+id/surnameID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@drawable/main_screen_buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="Passwords don`t match"
                    android:textColor="@color/colorBackround"
                    android:background="@color/colorAlarm"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:textSize="20dp"
                    android:layout_height="25dp"
                    android:id="@+id/errorTVID"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"/>
            <Button
                android:id="@+id/signUpID"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="SIGN UP"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/main_screen_buttons"/>
        </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
